@model IEnumerable<Game>

@{
    ViewData["Title"] = "Home Page";
}

@if(!Model.Any())
{
    <div class="alert alert-warning mt-5">

        <h4 class="alert-heading">NO games!</h4>
        <p class="mb-0">No games were found!</p>
    </div>

}
else{
    <div class="row mt-5">
        @foreach (var game in Model)
        {
            <a class="col-lg-4 col-md-6 text-decoration-none" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body" style="background-image: url(@($"{FileSettings.ImagesPath}/{game.Cover}")); background-size:cover; background-position: center; height:500px;">
                        <div class="d-flex align-items-end h-100">
                            <span class="badge bg-primary rounded-0 fs-5">@game.Category?.Name</span>
                        </div>
                    </div>

                    <div class="card-footer text-bg-dark bg-body-tertiary  text-muted align-items-center">
                        <h3>@game.Name</h3>
                        <h5>@game.Description</h5>
                        @foreach(var device in game.Devices) 
                        {
                            <i class="@device.Device.Icon me-2 fs-4"></i>
                        }
                    </div>
                </div>
            </a>
        }
    </div>

}




